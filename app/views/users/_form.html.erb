<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :display_name %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= "(leave blank if unchanged)" if @updating %>
    <br />
    <%= f.password_field :password, autocomplete: ('off' if @updating)%>
  </p>
  <p>
  <%= f.label :password_confirmation %>
  <%= "(leave blank if unchanged)" if @updating %>
  <br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit user_form_submit_button_text(f.object) %></p>
<% end %>

