<%= form_for @new_entry do |f| %>
  <% if @new_entry.errors.any? %>
    <% @new_entry.errors.full_messages.each do |msg| %>
      <div><%= "Error: #{msg} " %></div>
    <% end %>
  <% end %>

  <%= f.hidden_field :spawnable_type %>
  <%= f.hidden_field :spawnable_id %>

  <p>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
